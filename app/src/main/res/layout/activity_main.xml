<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.flowcharts.kolas.labs_tpcs.MainActivity">

    <include
        layout="@layout/footer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <HorizontalScrollView

        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/addrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/rect_img"
                android:text="@string/rect"/>

            <ImageButton
                android:id="@+id/rhomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/rhomb_img"
                />

            <ImageButton
                android:id="@+id/begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/begin_img"/>

            <ImageButton
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/end_img"
                android:text="end"/>

            <ImageButton
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/link"
                android:text="@string/link"/>
        </LinearLayout>


    </HorizontalScrollView>

    <FrameLayout
        android:animationCache="true"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
    </FrameLayout>



</LinearLayout>
